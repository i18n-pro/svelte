{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "removeComments": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-to-md"
  },
  "include": [
    "src/",
    "./global.d.ts",
    "test/",
    "node_modules/vitest/globals.d.ts"
  ]
}
